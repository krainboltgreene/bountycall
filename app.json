{
  "name": "blank-web-rails",
  "description": "The blank-web-rails service",
  "scripts": {
    "postdeploy": "bin/postdeploy"
  },
  "env": {
    "RAILS_HOST": {
      "required": true
    },
    "ENCRYPTION_SALT": {
      "generator": "secret"
    },
    "RAILS_MASTER_KEY": {
      "generator": "secret"
    },
    "RAILS_MAX_THREADS": {
      "value": "5",
      "required": true
    },
    "WEB_CONCURRENCY": {
      "value": "2",
      "required": true
    },
    "RAILS_EMAIL_USER": {
      "required": true
    },
    "RAILS_EMAIL_HOST": {
      "required": true
    },
    "PGBOUNCER_POOL": {
      "value": "300",
      "required": true
    },
    "REDIS_CACHE_URL": {
      "required": true
    },
    "REDIS_CACHE_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "REDIS_OBJECTS_URL": {
      "required": true
    },
    "REDIS_OBJECTS_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "REDIS_REDLOCK_URL": {
      "required": true
    },
    "REDIS_REDLOCK_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "REDIS_ACTION_CABLE_URL": {
      "required": true
    },
    "REDIS_ACTION_CABLE_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "REDIS_SIDEKIQ_URL": {
      "required": true
    },
    "REDIS_SIDEKIQ_SERVER_POOL_SIZE": {
      "value": "10",
      "required": true
    },
    "REDIS_SIDEKIQ_CLIENT_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "RACK_TIMEOUT_SERVICE_TIMEOUT": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "librato",
    "logdna",
    "newrelic",
    "heroku-postgresql",
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS_OBJECTS",
      "options": {
        "maxmemory_policy": "noeviction"
      }
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS_REDLOCK",
      "options": {
        "maxmemory_policy": "noeviction"
      }
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS_SIDEKIQ",
      "options": {
        "maxmemory_policy": "noeviction"
      }
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS_CACHE",
      "options": {
        "maxmemory_policy": "volatile-lru"
      }
    },
    "mailtrap"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-pgbouncer"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
