{
  "name": "blankwebrails-mvp",
  "description": "The first pass at the BlankWebRails application",
  "scripts": {
    "postdeploy": "bin/postdeploy"
  },
  "env": {
    "RAILS_HOST": {
      "required": true
    },
    "ORIGIN_ENCRYPTION_PRIVATE": {
      "generator": "secret"
    },
    "ORIGIN_ENCRYPTION_SALT": {
      "generator": "secret"
    },
    "RAILS_MASTER_KEY": {
      "generator": "secret"
    },
    "RAILS_MAX_THREADS": {
      "value": "5",
      "required": true
    },
    "RAILS_SESSION_PRIVATE": {
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "value": "2",
      "required": true
    },
    "RAILS_EMAIL_FROM": {
      "required": true
    },
    "PGBOUNCER_POOL": {
      "value": "300",
      "required": true
    },
    "RAILS_CACHE_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "REDIS_POOL_SIZE": {
      "value": "2",
      "required": true
    },
    "RACK_SERVICE_TIMEOUT": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "librato",
    "logdna",
    "newrelic",
    "heroku-postgresql",
    "heroku-redis",
    "mailtrap"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-pgbouncer"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
